{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./app/js",
    "removeComments": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },

  "include": [
    "./app/ts/**/*"
  ],
  "exclude": [
    "./app/ts/server/**/*"
  ]
}
